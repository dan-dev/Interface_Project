<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:tag="Info"
            tools:context="com.ismai.aninterface.interface_project.PlaceDetailsFragment">

            <ImageView
                android:id="@+id/image_place"

                android:layout_width="150dp"
                android:layout_height="175dp" />

            <TextView
                android:id="@+id/score_place"

                android:layout_toRightOf="@id/image_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/contact_place"

                android:layout_toRightOf="@id/image_place"
                android:layout_below="@id/score_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/details_place"

                android:layout_below="@id/image_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_go_place"
        android:text="Go to location."

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_gravity="bottom|center_horizontal" />
</LinearLayout>