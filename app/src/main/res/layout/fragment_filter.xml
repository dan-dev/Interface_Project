<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="F"
    tools:context="com.ismai.aninterface.interface_project.FilterFragment">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filters" />

    <TextView
        android:id="@+id/text2"
        android:text="Distancia: "


        android:paddingTop="15dp"
        android:layout_below="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/ratious_box"

        android:inputType="number"
        android:layout_toRightOf="@+id/text2"
        android:layout_below="@+id/text"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spin_type"

        style="@android:style/Widget.Material.Spinner"
        android:layout_margin="20dp"
        android:layout_below="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spin_score"


        android:layout_margin="20dp"
        android:layout_below="@+id/text2"
        android:layout_toRightOf="@+id/spin_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Widget.Material.DropDownItem.Spinner" />

    <Button
        android:id="@+id/button_submit"
        android:text="Apply."

        android:layout_below="@+id/spin_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
