<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="F"
    tools:context="com.ismai.aninterface.interface_project.FilterFragment">

    <TextView
        android:id="@+id/text2"
        android:text="@string/filter_distance"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <EditText
        android:id="@+id/ratious_box"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:backgroundTint="@color/colorAccent"
        android:layout_below="@+id/text2"
        android:layout_height="wrap_content"
        android:layout_width="200dp" />

    <TextView
        android:id="@+id/type_filter"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/filter_type"
        android:layout_below="@+id/ratious_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spin_type"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_below="@+id/type_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RatingBar
        android:id="@+id/rating_stars"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:stepSize="0.5"
        android:numStars="5"
        android:layout_below="@+id/spin_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/order_by"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/filter_order_by"
        android:layout_below="@+id/rating_stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spin_sorting"
        android:layout_marginTop="5dp"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/order_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_submit"
        android:text="@string/filter_apply"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="200dp"
        android:layout_height="50dp" />

</RelativeLayout>