<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewFragment">

    <TextView
        android:id="@+id/text_title_review"

        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/title_review"
        android:layout_below="@+id/text_title_review"

        android:background="@color/color_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_body_review"

        android:text="Review"
        android:layout_below="@+id/title_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <EditText
        android:id="@+id/text_review"
        android:gravity="start"
        android:layout_marginTop="25dp"
        android:background="@color/color_text"
        android:layout_below="@+id/text_body_review"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <RatingBar
        android:id="@+id/rating_review"
        android:layout_below="@+id/text_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/submit_review"

        android:text="Submit"
        android:layout_toRightOf="@+id/rating_review"
        android:layout_below="@+id/text_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
